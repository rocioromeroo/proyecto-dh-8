<html lang="en">
      <%- include("./partial/head")  %> 
<body>
      <%- include("./partial/header") %> 
      <script src="/javascripts/banner.js" defer></script>

      <section id="banner-carousel" class="banner">
            <img class="image img_1 hidden" src="/images/imagen-salon.jpeg" alt="">
            <img class="image img_2 hidden" src="/images/image-1611619478113.jpeg" alt="">
            <img class="image img_3 hidden" src="/images/imagen-salon.jpeg" alt="">
      </section>

      <main id="home-main">
            <section id="novedades" class="pad-section">
                  <div class="titulo-link-contain">
                        <h2>Novedades</h2>
                        <a class="link-ver-mas underline" href="/products">Ver mas</a>
                  </div>
                  <div class="novedades-contain">
                        <% for (let i = 0; i < 1; i++) { %>
                        <article class="nov-caja nov-caja1 n-size d-flex flex-wrap">
                              <div class="nov-img-contain width-50 width-100 height-50 d-flex-wrap a-i-center a-i-start order-1">
                                    <img class="n-img-size d-flex flex-wrap" src="/images/<%= novedades[i].category.name %>/<%= novedades[i].image %>"alt="imagen-mc">
                                    <a href="/products/<%= novedades[i].id %>"class="h2-nov width-70">VER MAS</a>
                              </div>
                              <div class="nov-des-contain width-50 width-100 height-50 d-flex flex-wrap a-i-center" >
                                    <h3><%= novedades[i].name%></h3>
                                    <p><%= novedades[i].description%></p>
                              </div>
                        </article>
                        
                        <div class="f-column d-flex flex-wrap">
                              <article class="nov-caja nov-caja2 n-size d-flex flex-wrap">
                                    <div class="nov-img-contain width-50 d-flex-wrap a-i-center">
                                          <img class="n-img-size d-flex flex-wrap max-height" src="/images/<%= novedades[i+1].category.name %>/<%= novedades[i+1].image %>"  alt="Kart">
                                          <a href="/products/<%= novedades[i+1].id %>" class="h2-nov width-70">VER MAS</a>
                                    </div>   
                                    <div class="nov-des-contain width-50 d-flex flex-wrap a-i-center">
                                          <h3><%= novedades[i+1].name%></h3>
                                          <p><%= novedades[i+1].description%></p>
                                    </div>  
                              </article>
                              
                              <article class="nov-caja nov-caja3 n-size d-flex flex-wrap">
                                    <div class="nov-img-contain  width-50 d-flex flex-wrap a-i-center order-1">
                                          <img class="n-img-size d-flex flex-wrap max-height" src="/images/<%= novedades[i+2].category.name %>/<%= novedades[i+2].image %>" alt="" height="100%">
                                          <a href="/products/<%= novedades[i+2].id %>" class="h2-nov width-70">VER MAS</a>
                                    </div>   
                                    <div class="nov-des-contain width-50 d-flex flex-wrap a-i-center">
                                          <h3><%= novedades[i+2].name%></h3>
                                          <p><%= novedades[i+2].description%></p>
                                    </div>    
                              </article>
                              
                        </div>  
                        <% } %>
                  </div>
                  
            </section>
            
            <section id="lista-productos" class="pad-section">            
                  <div class="titulo-link-contain">
                        <h2>Productos</h2>
                        <a class="link-ver-mas" href="/products">Ver mas productos</a>
                  </div>
                  <% for (let dato of items) { %>
                  <article class="home-producto">
                        <div class="article-img">
                              <img src="/images/<%= dato.category.name %>/<%= dato.image %>" alt="">
                        </div>
                        <div class="article-base">
                              <h3><%= dato.name   %></h3>
                              <h2>$ <%= dato.price   %></h2>
                              <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Quis, cupiditate.</p>
                              <a class="ver-mas" href="/products/<%= dato.id %>">Ver mas</a>
                              <form action="/products/cart" method="POST">
                                    <input name="price" type="hidden" value="200">
                                    <input name="quantity" type="hidden" value="2">
                                    <input name="product_id" type="hidden" value="3">
                                    <button class="add-car" href="/products/cart">Agregar al carrito</button>
                              </form>
                              
                              
                        </div>      
                  </article>
                  <% } %>

                 
            </section>
            
            <section id="accesorios" class="pad-section">
                  <div class="titulo-link-contain">
                        <h2>Accesorios</h2>
                        <a class="link-ver-mas" href="./products/category/accesorios">Ver mas accesorios</a>
                  </div>
                  <% for (let i of esteAccesorio) {%>
                  <article class="ac-contain">
                        <div class="p-ac-img">
                            <img src="/images/<%= i.category.name %>/<%= i.image%>" alt="canasta">
                        </div>
                        <div class="acc-base-contain">
                              <h3><a href="#"><%= i.name%></a></h3>
                              <p class="precio">$ <%= i.price%></p>
                              <a class="ver-mas" href="/products/<%= i.id %>">Ver mas</a>
                              <a class="add-car" href="/products/cart">Agregar al carrito</a>
                        </div>      
                  </article>
                  <%}%>
            </section>

            <section id="base-de-home">
                  <div class="base-home-contain">
                        <a href="#">
                              <i class="fas fa-headset"></i>
                              <h5>Soporte tecnico</h5>
                        </a>
                        <a href="#">
                              <i class="fas fa-shield-alt"></i>
                              <h5>Garantia 1 a√±o de fabrica</h5>
                        </a>
                        <a href="#">
                              <i class="fas fa-shipping-fast"></i>
                              <h5>Envio a todo el pais</h5>
                        </a>
                        <a href="#">
                              <i class="fas fa-bicycle"></i>
                              <h5>Asesoramiento en compra</h5>
                        </a>
                  </div>
            </section>
      </main>

      <%- include("./partial/footer") %> 
      
</body>

</html>